{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "bunx tsc && node dist/server.js",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bunx tsc src/db/migrate.ts",
    "db:studio": "drizzle-kit studio --port 5000"
  },
  "keywords": [
    "Express",
    "NodeJS"
  ],
  "author": "isadia",
  "license": "ISC",
  "description": "Typescript NodeJS express server",
  "dependencies": {
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.24.1",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
